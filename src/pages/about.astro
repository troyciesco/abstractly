---
import ContactSection from "@/components/ContactSection.astro"
import Hero from "@/components/Hero.astro"
import StatsSection from "@/components/StatsSection.astro"
import TeamSection from "@/components/TeamSection.astro"
import MarketingLayout from "@/layouts/MarketingLayout.astro"
import { contactSectionContent } from "@/lib/content"
---

<MarketingLayout>
	<Hero
		title="Well-crafted abstract images"
		description="High quality abstract images for your projects, wallpaper and presentations."
	/>
	<StatsSection />
	<TeamSection />
	<ContactSection
		title={contactSectionContent.title}
		description={contactSectionContent.description}
		address={contactSectionContent.address}
		phone={contactSectionContent.phone}
		email={contactSectionContent.email}
	/>
</MarketingLayout>
