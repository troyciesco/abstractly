---
import Sheet from "@/components/Sheet.astro"
import LibraryLayout from "@/layouts/LibraryLayout.astro"
import CContactSection from "@/components/ContactSection.astro"
import { contactSectionContent } from "@/lib/content"
---

<LibraryLayout>
	<div class="flex flex-col justify-center items-center w-full min-h-screen">
		<Sheet>
			<CContactSection
				title={contactSectionContent.title}
				description={contactSectionContent.description}
				address={contactSectionContent.address}
				phone={contactSectionContent.phone}
				email={contactSectionContent.email}
			/>
		</Sheet>
	</div>
</LibraryLayout>
