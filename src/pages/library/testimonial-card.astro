---
import CTestimonialCard from "@/components/TestimonialCard.astro"
import LibraryLayout from "@/layouts/LibraryLayout.astro"
import avatar from "@/assets/img/sarahdole.png"
---

<LibraryLayout>
	<div class="w-full min-h-screen flex flex-col items-center justify-center">
		<div class="w-[384px]">
			<CTestimonialCard
				name="Sarah Dole"
				handle="sarahdole"
				image={{ src: avatar, alt: "Sarah Dole" }}
				quote="I've been searching for high-quality abstract images for my design projects, and I'm thrilled to have found this platform. The variety and depth of creativity are astounding!"
			/>
		</div>
	</div>
</LibraryLayout>
