---
import { Icon } from "astro-icon/components"

const { eyebrow, title, description, features } = Astro.props
---

<section class="container py-24">
	<div class="mb-16 text-center">
		<p class="text-primary-700 mb-3 font-semibold leading-6">{eyebrow}</p>
		<h2 class="leading-16 mb-5 text-5xl font-semibold">{title}</h2>
		<p class="text-xl leading-[28px] text-muted max-w-prose mx-auto">
			{description}
		</p>
	</div>
	<div class="grid grid-cols-3 gap-8">
		{
			features.map((feature) => (
				<div class="flex flex-col items-center">
					<div class="default-shadow flex justify-center items-center mb-5 w-12 h-12 rounded-full">
						<Icon name={feature.icon} class="text-primary-700" />
					</div>
					<div class="text-xl leading-[28px] font-semibold mb-2">
						{feature.title}
					</div>
					<p class="text-muted max-w-prose leading-6 text-center">
						{feature.description}
					</p>
				</div>
			))
		}
	</div>
</section>
