---
import { Image } from "astro:assets"
import SectionHeader from "./SectionHeader.astro"

type Props = {
	eyebrow: string
	title: string
	description: string
	image: {
		src: ImageMetadata
		alt: string
	}
	stats: {
		value: number | string
		label: string
	}[]
	statHeading: string
}

const { eyebrow, title, description, image, stats, statHeading } = Astro.props
---

<section class="container py-24">
	<SectionHeader eyebrow={eyebrow} title={title} description={description} />
	<div class="grid grid-cols-2 gap-8">
		<div>
			<Image src={image.src} alt={image.alt} />
		</div>
		<div class="space-y-8">
			<h3 class="text-lg leading-[28px] text-muted">{statHeading}</h3>
			{
				stats.map((stat) => (
					<div class="p-6 w-full rounded-lg default-shadow text-center">
						<div class="mb-4 text-primary-700 font-bold text-5xl leading-12">
							{stat.value}
						</div>
						<div class="text-muted text-xl leading-[28px]">{stat.label}</div>
					</div>
				))
			}
		</div>
	</div>
</section>
