---
import { Image } from "astro:assets"
import SectionHeader from "./SectionHeader.astro"

type Props = {
	eyebrow: string
	title: string
	description: string
	image: {
		src: ImageMetadata
		alt: string
	}
	stats: {
		value: number | string
		label: string
	}[]
	statHeading: string
}

const { eyebrow, title, description, image, stats, statHeading } = Astro.props
---

<section class="container py-24">
	<SectionHeader eyebrow={eyebrow} title={title} description={description} />
	<div class="grid grid-cols-2 gap-8">
		<div>
			<Image src={image.src} alt={image.alt} />
		</div>
		<div>
			<h3>{statHeading}</h3>
			{
				stats.map((stat) => (
					<div>
						<div>{stat.value}</div>
						<div>{stat.label}</div>
					</div>
				))
			}
		</div>
	</div>
</section>
