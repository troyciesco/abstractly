---
import { Image } from "astro:assets"
import heroImg from "../assets/img/prism.png"

const { title, description } = Astro.props
---

<section
	class="-bg-linear-15 from-[#EDF0F3] to-[#F9FAFB] py-16 xl:max-h-[718px] w-full shadow-[0_10px_15px_-3px_rgba(0,0,0,0.1),0_4px_6px_-2px_rgba(0,0,0,0.5)] rounded-md flex items-center">
	<div
		class="md:px-4 xl:px-0 xl:grid-cols-12 grid grid-cols-1 gap-8 items-center px-3 mx-auto max-w-7xl">
		<div class="xl:col-span-5">
			<h1
				class="text-neutral-900 xl:leading-15 xl:text-6xl xl:mb-6 mb-4 text-4xl font-semibold leading-10">
				{title}
			</h1>
			<p
				class="text-lg xl:text-xl text-neutral-600 leading-[28px] mb-8 xl:mb-16">
				{description}
			</p>
			<div class="xl:gap-8 flex gap-4">
				<a
					href="#"
					class="border-neutral-200 text-neutral-900 default-shadow xl:text-lg xl:py-4 xl:px-9 px-8 py-3 font-medium bg-white rounded-sm border">
					Learn More
				</a>
				<a
					href="#"
					class="default-shadow xl:text-lg xl:py-4 xl:px-9 px-8 py-3 font-medium text-white bg-indigo-700 rounded-sm">
					See Pricing
				</a>
			</div>
		</div>
		<div class="xl:col-span-7">
			<Image src={heroImg} alt="A stack of abstract images" />
		</div>
	</div>
</section>
